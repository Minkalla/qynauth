    {
        "name": "QynAuth Development Environment",
        "image": "mcr.microsoft.com/devcontainers/universal:2",
        "features": {
            "ghcr.io/devcontainers/features/python:1": {
                "version": "3.10",
                "installPoetry": "false" // Set to false, as we'll install it manually in postCreateCommand for robustness
            },
            "ghcr.io/devcontainers/features/rust:1": {
                "version": "1.70.0"
            },
            "ghcr.io/devcontainers/features/node:1": {
                "version": "20"
            }
        },
        "customizations": {
            "vscode": {
                "extensions": [
                    "ms-python.python",
                    "ms-python.vscode-pylance",
                    "esbenp.prettier-vscode",
                    "dbaeumer.vscode-eslint",
                    "rust-lang.rust-analyzer",
                    "github.vscode-github-actions"
                ]
            }
        },
        // --- MODIFIED postCreateCommand for robust Poetry installation ---
        "postCreateCommand": "python3 -m pip install --user pipx && python3 -m pipx ensurepath && pipx install poetry && cd src/python_app && poetry install --no-root && cd ../rust_lib && cargo build && cd ../python_app",
        "remoteUser": "codespace"
    }
